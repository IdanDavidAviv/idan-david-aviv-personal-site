{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@ui/*": [
                "src/components/ui/*"
            ],
            "@sections/*": [
                "src/components/sections/*"
            ],
            "@layout/*": [
                "src/components/layout/*"
            ],
            "@hooks/*": [
                "src/hooks/*"
            ],
            "@lib/*": [
                "src/lib/*"
            ],
            "@data/*": [
                "data/*"
            ]
        }
    },
    "include": [
        "src",
        "data"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}